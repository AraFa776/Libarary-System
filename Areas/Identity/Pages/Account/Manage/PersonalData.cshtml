@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="container py-5 d-flex justify-content-center">
    <div class="card shadow p-4" style="max-width: 600px; width: 100%; border-radius: var(--bs-border-radius-lg);">
        <h3 class="text-center text-danger mb-4">@ViewData["Title"]</h3>

        <p class="mb-3">
            Your account contains personal data that you have given us. This page allows you to download or delete that data.
        </p>

        <div class="alert alert-warning" role="alert">
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </div>

        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="mb-3">
            <button class="btn btn-primary w-100" type="submit">Download My Data</button>
        </form>

        <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger w-100">Delete My Account</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
