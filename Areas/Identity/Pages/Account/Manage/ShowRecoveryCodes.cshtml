@page
@model ShowRecoveryCodesModel
@{
    ViewData["Title"] = "Recovery Codes";
    ViewData["ActivePage"] = "TwoFactorAuthentication";
}

<div class="container py-5">
    <div class="card shadow-lg p-4" style="max-width: 800px; margin: 0 auto;">
        <h3 class="text-center mb-4 text-primary">@ViewData["Title"]</h3>

        <partial name="_StatusMessage" for="StatusMessage" />

        <!-- Alert for Safety Message -->
        <div class="alert alert-warning" role="alert">
            <p><strong>Put these codes in a safe place.</strong></p>
            <p>If you lose your device and don't have the recovery codes, you will lose access to your account.</p>
        </div>

        <!-- Display Recovery Codes -->
        <div class="row">
            <div class="col-md-12">
                <div class="recovery-codes-container text-center">
                    @for (var row = 0; row < Model.RecoveryCodes.Length; row += 2)
                    {
                        <div class="recovery-code-row">
                            <code class="recovery-code bg-light border p-2 rounded">@Model.RecoveryCodes[row]</code>
                            <span class="mx-2">|</span>
                            <code class="recovery-code bg-light border p-2 rounded">@Model.RecoveryCodes[row + 1]</code>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
