<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
          crossorigin="anonymous" />

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    <link href="~/BookShoppingCartMvcUI.styles.css" rel="stylesheet" />

</head>
<body>

    <style>
        .nav-tabs .nav-link.active {
            border-color: var(--bs-secondary);
            margin-bottom: -1px;
            z-index: 1;
        }

        .tab-content {
            margin-top: -1px;
        }
    </style>
    <div class="container py-4">
        <!-- Tab Navigation -->
        <div class="card rounded-4 mb-4">
            <ul class="nav nav-tabs flex-wrap g-2 d-flex justify-content-center" id="dashboardTabs" role="tablist">
                <!-- Home Tab -->
                <li class="nav-item me-3 my-3" role="presentation">
                    <a class="nav-link @( (string)ViewContext.RouteData.Values["Controller"] == "Home" && (string)ViewContext.RouteData.Values["Action"] == "Index" ? "active" : "")
                                   bg-white rounded-pill px-4 py-2 d-flex align-items-center gap-2"
                       asp-controller="Home" asp-action="Index"
                       role="tab"
                       aria-controls="profile"
                       aria-selected="true">
                        <i class="bi bi-house-door-fill fs-5 text-primary"></i>
                        <span class="fw-medium">Home</span>
                    </a>
                </li>

                <!-- Orders Tab -->
                <li class="nav-item me-3 my-3" role="presentation">
                    <a class="nav-link @((string)ViewContext.RouteData.Values["Controller"] == "AdminOperations" &&
                                     (string)ViewContext.RouteData.Values["Action"] == "AllOrders"
                                     ? "active" : "")
                                   bg-white rounded-pill px-4 py-2 d-flex align-items-center gap-2"
                       asp-controller="AdminOperations" asp-action="AllOrders"
                       role="tab"
                       aria-controls="orders"
                       aria-selected="false">
                        <i class="bi bi-receipt fs-5 text-success"></i>
                        <span class="fw-medium">Orders</span>
                    </a>
                </li>

                <!-- Stock Tab -->
                <li class="nav-item me-3 my-3" role="presentation">
                    <a class="nav-link @((string)ViewContext.RouteData.Values["Controller"] == "Stock" &&
                                     (string)ViewContext.RouteData.Values["Action"] == "Index"
                                     ? "active" : "")
                                   bg-white rounded-pill px-4 py-2 d-flex align-items-center gap-2"
                       asp-controller="Stock" asp-action="Index"
                       role="tab"
                       aria-controls="stock"
                       aria-selected="false">
                        <i class="bi bi-archive fs-5 text-warning"></i>
                        <span class="fw-medium">Stock</span>
                    </a>
                </li>

                <!-- Genre Tab -->
                <li class="nav-item me-3 my-3" role="presentation">
                    <a class="nav-link @((string)ViewContext.RouteData.Values["Controller"] == "Genre" &&
                                     (string)ViewContext.RouteData.Values["Action"] == "Index"
                                     ? "active" : "")
                                   bg-white rounded-pill px-4 py-2 d-flex align-items-center gap-2"
                       asp-controller="Genre" asp-action="Index"
                       role="tab"
                       aria-controls="genre"
                       aria-selected="false">
                        <i class="bi bi-collection fs-5 text-info"></i>
                        <span class="fw-medium">Genre</span>
                    </a>
                </li>

                <!-- Books Tab -->
                <li class="nav-item me-3 my-3" role="presentation">
                    <a class="nav-link @((string)ViewContext.RouteData.Values["Controller"] == "Book" &&
                                     (string)ViewContext.RouteData.Values["Action"] == "Index"
                                     ? "active" : "")
                                   bg-white rounded-pill px-4 py-2 d-flex align-items-center gap-2"
                       asp-controller="Book" asp-action="Index"
                       role="tab"
                       aria-controls="books"
                       aria-selected="false">
                        <i class="bi bi-book fs-5 text-primary"></i>
                        <span class="fw-medium">Books</span>
                    </a>
                </li>

                <!-- Reports Tab -->
                <li class="nav-item me-3 my-3" role="presentation">
                    <a class="nav-link @((string)ViewContext.RouteData.Values["Controller"] == "Reports" &&
                                     (string)ViewContext.RouteData.Values["Action"] == "TopFiveSellingBooks"
                                     ? "active" : "")
                                   bg-white rounded-pill px-4 py-2 d-flex align-items-center gap-2"
                       asp-controller="Reports" asp-action="TopFiveSellingBooks"
                       role="tab"
                       aria-controls="reports"
                       aria-selected="false">
                        <i class="bi bi-bar-chart-line fs-5 text-danger"></i>
                        <span class="fw-medium">Top Sellers</span>
                    </a>
                </li>
            </ul>
        </div>

        <!-- Content Area -->
        <div class="bg-white p-4 mt-4 rounded-4 shadow-lg">
            <div class="my-2">
                <partial name="_Notifications" />
            </div>
            @RenderBody()
        </div>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</html>
