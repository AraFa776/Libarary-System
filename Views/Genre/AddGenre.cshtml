@model GenreDTO
@{
    Layout = "_AdminLayout";
}

<div class="container py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0 text-primary">
            <i class="bi bi-collection me-2"></i>Add Genre
        </h3>
        <a asp-action="Index" asp-controller="Genre" class="btn btn-outline-primary d-flex align-items-center gap-2">
            <i class="bi bi-arrow-left-circle"></i> Back to Genres
        </a>
    </div>

    <!-- Form Card -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-header bg-info">
                    <h5 class="card-title mb-0">Add Genre</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="AddGenre" class="needs-validation" novalidate>
                        @* <input type="hidden" asp-for="Id" /> *@

                        <!-- Genre Name Input -->
                        <div class="mb-3">
                            <label asp-for="GenreName" class="form-label fw-bold fs-5">Genre Name</label>
                            <input type="text"
                                   class="form-control form-control-lg"
                                   asp-for="GenreName"
                                   placeholder="Enter genre name" />
                            <div class="form-text text-muted">
                                Enter a new genre name
                            </div>
                            <span class="text-danger small" asp-validation-for="GenreName"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary d-flex align-items-center justify-content-center gap-2 py-2">
                                <i class="bi bi-plus-circle-fill"></i>
                                <span>Add Genre</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@* Layout = "_AdminLayout"; *@
